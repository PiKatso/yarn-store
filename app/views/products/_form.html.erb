<%= render "layouts/errors", :object => @product %>

<%= form_for @product do |f| %>
<div class="form-group">
  <%= f.text_field :name, placeholder: :name %>
</div>
<div class="form-group">
  <%= f.text_field :description, placeholder: :description  %>
</div>
<div class="form-group">
  <%= f.number_field :price, placeholder: '00.00' %>
</div>
<div class="form-group">
  <%= f.text_field :image, placeholder: 'Image URL'  %>
</div>
<div class="form-group">
  <%= f.text_field :material, placeholder: :material  %>
</div>
<div class="form-group">
  <%= f.text_field :length, placeholder: "Skein Length (with Yards/Meters)"  %>
</div>
<div class="form-group">
  <%= f.text_field :weight, placeholder: :weight  %>
</div>
<div class="form-group">
  <%= f.text_field :color, placeholder: :color  %>
</div>
<div class="form-group">
  <%= f.text_field :care, placeholder: :care  %>
</div>
  <%= f.submit class: 'btn btn-success'%>
<% end %>
