<%= render "layouts/errors", :object => @review %>

<%= form_for [@product, @review] do |f| %>
  <div class="form-group">
  <%= f.text_field :author, placeholder: 'author' %>
</div>
<div class="form-group">
  <%= f.text_area :content, placeholder: 'content' %>
</div>
  <%= f.submit class: 'btn btn-success' %>
<% end %>
